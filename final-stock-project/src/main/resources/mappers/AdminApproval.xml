<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kh.st.boot.dao.AdminApprovalDAO">

	<select id="SelectAll" resultType="AdmApprovalVO">
		SELECT
		* FROM
		member_approve
	</select>

	<select id="selectCountList" resultType="int"> SELECT COUNT(*) FROM
		member_approve
		WHERE (mp_yn IS NULL)
	</select>

	<update id="nyUPDATE">
		UPDATE member_approve
		SET mp_yn = #{mp_yn}, mp_app_date = NOW()
		WHERE mp_no = #{mp_no}
	</update>

	<insert id="newsInsert">
		VALUES
		(#{mb_no}, #{mp_company})
	</insert>

	<insert id="stockInsert">
		INSERT INTO stock_member (mb_no, mb_stock)
		VALUES
		(#{mb_no}, #{mp_company})
	</insert>

	<select id="searchApproval" resultType="AdmApprovalVO">
		SELECT * FROM
		member_approve
		WHERE mp_company = #{mp_company}
	</select>

</mapper>
